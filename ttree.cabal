                     , lens == 4.14.*
                     , primitive == 0.6.*
                     , vector == 0.11.*
                     , containers == 0.5.*
                     , transformers == 0.5.2.*
                     , list-transformer == 1.0.*
  hs-source-dirs:      src
  default-language:    Haskell2010

executable ttreeTest
  main-is:             test/Main.hs
  build-depends:       base == 4.9.*
                     , lens == 4.14.*
                     , vector == 0.11.*
                     , list-transformer == 1.0.*
                     , ttree == 0.2.*
  default-language:    Haskell2010
  ghc-options:         -pgmlg++ -Wall -O1
  ghc-prof-options:    -pgmlg++ -Wall -O0 -fprof-auto -caf-all -rtsopts
